generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  PAID
  ORDERED
  SHIPPED
  REFUNDED
  CANCELED
}

model Order {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status OrderStatus @default(PAID)

  productId   String
  productName String
  unitAmount  Int
  currency    String

  stripeSessionId String  @unique
  stripePaymentId String?
  customerEmail   String?
  customerName    String?

  shipLine1      String?
  shipLine2      String?
  shipCity       String?
  shipState      String?
  shipPostalCode String?
  shipCountry    String?

  supplierUrl    String?
  trackingNumber String?
}
